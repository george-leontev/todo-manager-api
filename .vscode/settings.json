{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "pylint.path": [
        "${workspaceFolder}/.venv/bin/pylint"
    ],
    "pylint.args": [
        "--disable=missing-function-docstring",
        "--disable=missing-module-docstring",
        "--disable=missing-class-docstring",
    ]
}